{
  "name": "denopkg",
  "version": 2,
  "alias": ["denopkg.now.sh", "denopkg.com"],
  "builds": [
    {
      "src": "next.config.js",
      "use": "@now/next"
    },
    {
      "src": "github-redirect/index.js",
      "use": "@now/node"
    },
    { "src": "static/*", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/static/(.+)",
      "dest": "/static/$1"
    },
    {
      "src": "/([^/]+)/(.+)",
      "dest": "/github-redirect?path=/$1/$2"
    }
  ]
}
